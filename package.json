{
  "name": "liminal-ui-monorepo",
  "private": true,
  "version": "0.0.2",
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "commit": "cz",
    "build:registry": "tsx scripts/build-registry.ts",
    "release": "npm run build -w packages/cli && changeset publish"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.0",
    "@changesets/cli": "^2.27.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "tsx": "^4.7.0",
    "typescript": "^5.7.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
